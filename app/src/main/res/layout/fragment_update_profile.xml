<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/update_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_margin="120dp"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="80dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="65dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/edit_displayPicture"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#30ffffff"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/edit_fname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="First Name"
                android:background="@null"
                android:paddingVertical="10dp"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorHint="#CDBCBC" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#30ffffff"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/edit_pnumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone No."
                android:background="@null"
                android:paddingVertical="10dp"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorHint="#CDBCBC" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:text="Gender"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/gender_icons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_marginHorizontal="50dp"
            android:gravity="center"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="32.5dp"
                android:layout_gravity="center"
                android:id="@+id/edit_female_gender">

                <com.google.android.material.imageview.ShapeableImageView

                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/female_avatar"
                    app:shapeAppearanceOverlay="@style/round_small" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="32.5dp"
                android:layout_gravity="center"
                android:id="@+id/edit_male_gender">

                <com.google.android.material.imageview.ShapeableImageView

                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/male_avatar"
                    app:shapeAppearanceOverlay="@style/round_small" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="32.5dp"
                android:layout_gravity="center"
                android:id="@+id/edit_other_gender">

                <com.google.android.material.imageview.ShapeableImageView

                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/other_avatar"
                    app:shapeAppearanceOverlay="@style/round_small" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#30ffffff"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/edit_bio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Bio"
                android:gravity="start"
                android:background="@null"
                android:paddingVertical="10dp"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorHint="#CDBCBC" />

        </androidx.cardview.widget.CardView>
=

        <android.widget.Button
            android:id="@+id/edit_prof"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/gradient"
            android:text="Update Profile"
            android:textColor="@color/white" />
    </LinearLayout>


</FrameLayout>